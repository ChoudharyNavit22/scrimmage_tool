<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="http://gtri.gatech.edu"?>
<runscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="Test">

  <run start="0.0" end="100" dt="0.1"
       time_warp="10"
       enable_gui="true"
       network_gui="false"
       start_paused="true"/>

<!-- <camera focal_point="0,0,0" mode="free" pos="0,0,100" show_fps="true" /> -->

  <stream_port>50051</stream_port>
  <stream_ip>localhost</stream_ip>

  <end_condition>time, all_dead</end_condition> <!-- time, one_team, none-->

  <grid_spacing>10</grid_spacing>
  <grid_size>4000</grid_size>

  <!-- <terrain>mcmillan</terrain> -->
  <background_color>191 191 191</background_color> <!-- Red Green Blue -->
  <gui_update_period>10</gui_update_period> <!-- milliseconds -->

  <plot_tracks>false</plot_tracks>
  <output_type>all</output_type>
  <show_plugins>false</show_plugins>

  <metrics>SimpleCollisionMetrics</metrics>

  <log_dir>~/.scrimmage/logs</log_dir>

  <latitude_origin>35.721025</latitude_origin>
  <longitude_origin>-120.767925</longitude_origin>
  <altitude_origin>300</altitude_origin>
  <show_origin>true</show_origin>
  <origin_length>10</origin_length>

  <entity_interaction enable_team_collisions="false">SimpleCollision</entity_interaction>

    <entity_interaction enable_collision_detection="false"
                      show_rays="true"
                      publish_on_local_networks="true"
                      pcl_network_name="LocalNetwork"
                      pcl_topic_name="pointcloud"
                      prepend_pcl_topic_with_id="false"
                      >BulletCollision</entity_interaction>

    <!-- <entity_interaction>MapGen2D</entity_interaction> -->


  <network>GlobalNetwork</network>

  <network>LocalNetwork</network>
  
  <!-- uncomment "seed" and use integer for deterministic results -->
  <seed>2147483648</seed>

<!-- ========================== TEAM 1 ========================= -->
  <entity>
    <team_id>1</team_id> 
    <color>77 77 255</color>
    <count>1</count>
    <health>1</health>

    <variance_x>5</variance_x>
    <variance_y>5</variance_y>
    <variance_z>0</variance_z>

    <sensor xyz="0 0 0.1" rpy="0 0 0"
            angle_res_horiz="1" num_rays_horiz="360">RayTrace</sensor>

    <x>0</x>
    <y>0</y>
    <z>0</z>
    <heading>0</heading>          
    <controller>MyCarController</controller>
    <motion_model length="2">MyCarModel</motion_model>
    <visual_model>volkswagen</visual_model>

    <!-- <autonomy>AvoidWallsNew</autonomy> -->
    <sensor>VehicleLocationBroadcaster</sensor>
    <!-- <autonomy>Straight</autonomy> -->

    <autonomy waypointlist_network="LocalNetwork"
              waypoint_network="LocalNetwork">WaypointDispatcher</autonomy>

        <autonomy network_name="LocalNetwork" topic_Name="WaypointList"
              mode="racetrack"
              show_waypoints="true"
              waypoints="
                        [ XYZ 0 100   0 0 0 0 0 5 -1 ]
                        [ XYZ 0 100 100 0 0 0 0 5 -1 ]
                        [ XYZ 0   0 100 0 0 0 0 5 -1 ]
                        [ XYZ 0   0   0 0 0 0 0 5 -1 ]
                        "
              >WaypointGenerator</autonomy>

    <autonomy show_shapes="true" max_speed="5" behaviors="
      [ AvoidEntityMS show_shapes='true' avoid_non_team='true' sphere_of_influence='5' minimum_range='2' ]
       [ MoveToGoalMS gain='1.0' show_shapes='true' goal='100,50,0']"
              >MotorSchemas</autonomy>  
    
  </entity> 

<!-- ========================== TEAM 1 ========================= --> 


